<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Primary background color for activity -->
    <color name="mm_background">#FF000000</color>

    <!-- Text color -->
    <color name="mm_btntxtcolor_n">#FFFFFFFF</color>
    <color name="mm_btntxtcolor_f">#FFCCCCFF</color>
    <color name="mm_btntxtcolor_p">#FFFFFF00</color>

    <!-- Left background gradient color -->
    <color name="mm_btncolor1_n">#00FFFFFF</color>
    <color name="mm_btncolor1_f">#00FFFFFF</color>
    <color name="mm_btncolor1_p">#00FFFFFF</color>

    <!-- Right background gradient color -->
    <color name="mm_btncolor2_n">#10CCCCCC</color>
    <color name="mm_btncolor2_f">#10FFFFCC</color>
    <color name="mm_btncolor2_p">#10CCCCFF</color>

    <!-- Outline stroke color -->
    <color name="mm_btnoutline_n">#FF0000FF</color>
    <color name="mm_btnoutline_f">#FFCCCCFF</color>
    <color name="mm_btnoutline_p">#FFFFFF00</color>

    <!-- Outline stroke width -->
    <dimen name="mm_btnwidth_n">2dip</dimen>
    <dimen name="mm_btnwidth_f">2dip</dimen>
    <dimen name="mm_btnwidth_p">3dip</dimen>

    <!-- Other -->
    <dimen name="mm_button_padding">10dip</dimen>
    <dimen name="mm_button_corners">20dip</dimen>

    <style name="mm_bg">
        <item name="android:background">@color/mm_background</item>
    </style>

    <style name="mm_plate" parent="@style/mm_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mm_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5.0dip</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/mm_button_selector</item>
        <item name="android:background">@drawable/mm_button_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>